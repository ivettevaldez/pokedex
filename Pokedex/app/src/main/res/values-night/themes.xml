<resources>
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/golden_poppy</item>
        <item name="colorSecondaryVariant">@color/golden_poppy</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Styles -->
    <style name="CardStyle" parent="Theme.Pokedex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/surface</item>
        <item name="cardCornerRadius">@dimen/default_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="CircularProgressIndicatorStyle" parent="Theme.Pokedex">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/golden_poppy</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.TitleLarge" parent="Theme.Pokedex">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="TextAppearance.TitleMedium" parent="Theme.Pokedex">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_on_surface</item>
    </style>

    <style name="TextAppearance.LabelMedium" parent="Theme.Pokedex">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearance.BodyMedium" parent="Theme.Pokedex">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="lineHeight">20dp</item>
    </style>
</resources>